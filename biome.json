{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 4,
		"lineWidth": 110,
		"lineEnding": "crlf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"trailingComma": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"style": {
				"useTemplate": "off"
			}
		}
	}
}
